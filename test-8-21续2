int main()
{
	int n = 9;
	//00000000000000000000000000001001
	float* pFloat = (float*)&n;
	//0 00000000 00000000000000000001001
	printf("n的值为：%d\n", n);
	printf("pFloat的值为：%f\n", *pFloat);

	*pFloat = 9.0;
	//9.0->1001.0
// 	   （-1）^S*M*2^E
//(-1)^0 * 1.001 *2^3
// S=0;
// M=1.001;M只储存小数点后的数字
// E=3;E加上中间数（127）存入	
//0 10000010 00100000000000000000000
//0 10000010 00100000000000000000000
	//识别为有符号整型即为1091567616
	printf("num的值为：%d\n", n);
	printf("pFloat的值为：%f\n", *pFloat);
	return 0;
}
