int main()
{
	int a[5][5];
	int(*p)[4];//类型int(*)[4]
	p = a;
	printf("%p,%d\n", &p[4][2] - &a[4][2], &p[4][2] - &a[4][2]);
	//p[4]==*(p+4),每次+1跳4个字节，跳4次
	//p[4][2]==*(*(p+4)+2),再跳两个字节
	//相减为-4
	//10000000000000000000000000000100
	//11111111111111111111111111111011
	//11111111111111111111111111111100
	//打印为地址0xFF FF FF FC
	//-4
	return 0;
}
